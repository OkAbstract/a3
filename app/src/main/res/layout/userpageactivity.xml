<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="152dp"
        android:layout_height="145dp"
        app:srcCompat="@drawable/user"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="100dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="243dp"
        android:layout_height="74dp"
        android:text="Welcome Back \n User!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="351dp"
        android:layout_height="31dp"
        android:text="Hello, I am Amber how may I help you ?"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="267dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="377dp"
        android:layout_height="51dp"
        android:layout_marginBottom="12dp"
        android:text="Turn on the lights"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="377dp"
        android:layout_height="51dp"
        android:layout_marginBottom="12dp"
        android:text="Change the color to white"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="17dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="377dp"
        android:layout_height="51dp"
        android:text="Turn off the lights"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="454dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="377dp"
        android:layout_height="51dp"
        android:layout_marginTop="12dp"
        android:text="Mute Music from speaker"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="330dp"
        android:layout_height="56dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="648dp"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:theme="@style/Theme.Material3.DynamicColors.Dark"
        app:srcCompat="@android:drawable/ic_menu_send"
        tools:layout_editor_absoluteX="344dp"
        tools:layout_editor_absoluteY="648dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/siri_logo_in_2022"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="267dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button5"
        android:layout_width="377dp"
        android:layout_height="51dp"
        android:layout_marginTop="12dp"
        android:text="play music from speaker"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>